<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:padding="5dip" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_textview"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:width="60dp"
        android:textColor="#040404"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/row_time"
        android:layout_weight="0.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans" />


    <!-- Rightend Arrow -->
    <ImageView
        android:id="@+id/imageView_globalmuteedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_border_color_black_18dp"
        android:layout_toLeftOf="@+id/row_time" />

    <ImageView
        android:id="@+id/imageView_globalmutedelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/imageView_globalmuteedit"
        app:srcCompat="@drawable/ic_delete_black_18dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/imageView_globalmuteedit" />
    </TableRow>
    </TableLayout>
</RelativeLayout>