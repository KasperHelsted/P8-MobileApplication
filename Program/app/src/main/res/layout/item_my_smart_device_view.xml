<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="p8project.sw801.ui.main.Fragments.MySmartDeviceFragment.Items.MySmartDeviceItemViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:onClick="@{() -> viewModel.onItemClick()}"
            android:orientation="vertical"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <!--
                    app:imageUrl="@{viewModel.imageUrl}"
                -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <p8project.sw801.ui.custom.RoundedImageView
                        android:id="@+id/coverImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/hue" />

                    <TextView
                        android:id="@+id/deviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/coverImageView"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@{viewModel.deviceName}"
                        tools:text="Android MVP Architecture" />

                    <TextView
                        android:id="@+id/deviceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/coverImageView"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:textSize="11dp"
                        android:textColor="@color/blue_grey_light"
                        android:text="@{viewModel.deviceName}"
                        tools:text="Philips Hue Light Bulb White" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</layout>